<UserControl x:Class="WpfDemoApp.CustomCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemoApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Style pour l'effet d'ombre -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Gray" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Opacity="0.3"/>
    </UserControl.Resources>

    <Border Background="{Binding CardColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CornerRadius="10"
            Padding="15"
            Effect="{StaticResource CardShadow}"
            BorderBrush="#DDD"
            BorderThickness="1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icône -->
            <Border Grid.Column="0"
                    Background="#FFF"
                    CornerRadius="20"
                    Width="40"
                    Height="40"
                    Margin="0,0,15,0">
                <TextBlock Text="{Binding IconText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#666"/>
            </Border>

            <!-- Contenu principal -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,0,0,5"/>

                <TextBlock Text="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           TextWrapping="Wrap"
                           Foreground="#F0F0F0"
                           FontSize="12"/>
            </StackPanel>

            <!-- Bouton d'action (optionnel) -->
            <Button Grid.Column="2"
                    Content="➤"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="16"
                    Padding="10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Click="ActionButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="15"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#55FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
