<Window x:Class="WpfDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp"
        mc:Ignorable="d"
        Title="WPF Demo App" Height="600" Width="800">
    <Window.Resources>
        <!-- STYLES : Personnalisation de l'apparence -->

        <!-- Style simple pour bouton -->
        <Style x:Key="SimpleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Style avec triggers -->
        <Style x:Key="AnimatedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CONTROL TEMPLATE : Redéfinition complète d'un contrôle -->
        <Style x:Key="CircularButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Cercle de fond -->
                            <Ellipse x:Name="BackgroundEllipse"
                                   Fill="#FF9800"
                                   Stroke="#F57C00"
                                   StrokeThickness="2"/>

                            <!-- Contenu du bouton -->
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="White"
                                            TextElement.FontWeight="Bold"/>

                            <!-- Effet de hover -->
                            <Ellipse x:Name="HoverEllipse"
                                   Fill="#FFF"
                                   Opacity="0"/>
                        </Grid>

                        <!-- Triggers pour les interactions -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverEllipse" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="BackgroundEllipse" Property="Fill" Value="#FB8C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HoverEllipse" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="BackgroundEllipse" Property="Fill" Value="#E65100"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour TextBox personnalisé -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Titre principal -->
            <TextBlock Text="Démonstration WPF : Styles, Templates et UserControls" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="#333"/>

            <!-- Section 1 : Styles -->
            <GroupBox Header="1. STYLES - Personnalisation de l'apparence" 
                      Margin="0,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Les styles permettent de définir l'apparence des contrôles :" 
                               Margin="0,0,0,10" FontStyle="Italic"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Bouton par défaut -->
                        <Button Content="Bouton par défaut" Margin="5"/>

                        <!-- Bouton avec style simple -->
                        <Button Content="Style Simple" 
                                Style="{StaticResource SimpleButtonStyle}"/>

                        <!-- Bouton avec style animé -->
                        <Button Content="Style Animé" 
                                Style="{StaticResource AnimatedButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Section 2 : Control Templates -->
            <GroupBox Header="2. CONTROL TEMPLATES - Redéfinition complète" 
                      Margin="0,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Les Control Templates permettent de redéfinir complètement la structure visuelle :" 
                               Margin="0,0,0,10" FontStyle="Italic"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Boutons circulaires avec template personnalisé -->
                        <Button Content="▶" Style="{StaticResource CircularButtonStyle}" 
                                Click="PlayButton_Click"/>
                        <Button Content="⏸" Style="{StaticResource CircularButtonStyle}"
                                Click="PauseButton_Click"/>
                        <Button Content="⏹" Style="{StaticResource CircularButtonStyle}"
                                Click="StopButton_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="ActionText" 
                               Text="Cliquez sur un bouton circulaire..."
                               HorizontalAlignment="Center"
                               Margin="10"
                               FontWeight="Bold"
                               Foreground="#666"/>
                </StackPanel>
            </GroupBox>

            <!-- Section 3 : Contrôles de base personnalisés -->
            <GroupBox Header="3. PERSONNALISATION DES CONTRÔLES DE BASE" 
                      Margin="0,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Les contrôles de base peuvent être complètement transformés :" 
                               Margin="0,0,0,10" FontStyle="Italic"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="TextBox standard :" Margin="5"/>
                            <TextBox Text="TextBox par défaut" Margin="5"/>

                            <TextBlock Text="TextBox personnalisé :" Margin="5,15,5,5"/>
                            <TextBox Text="TextBox avec style moderne" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="CheckBox avec style :" Margin="5"/>
                            <CheckBox Content="Option 1" Margin="5"/>
                            <CheckBox Content="Option 2" Margin="5" IsChecked="True"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Section 4 : User Controls -->
            <GroupBox Header="4. USER CONTROLS - Contrôles personnalisés" 
                      Margin="0,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Les UserControls permettent de créer des contrôles réutilisables :" 
                               Margin="0,0,0,10" FontStyle="Italic"/>

                    <!-- Utilisation du UserControl personnalisé -->
                    <local:CustomCard Title="Carte d'information"
                                      Description="Ceci est un UserControl personnalisé qui peut être réutilisé partout dans l'application."
                                      IconText="ℹ"
                                      Margin="10"/>

                    <local:CustomCard Title="Carte de succès"
                                      Description="Un autre exemple du même UserControl avec des données différentes."
                                      IconText="✓"
                                      CardColor="#4CAF50"
                                      Margin="10"/>
                </StackPanel>
            </GroupBox>

            <!-- Section 5 : Résumé -->
            <GroupBox Header="RÉSUMÉ DES CONCEPTS" 
                      Margin="0,10" Padding="15"
                      Background="#E3F2FD">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Margin="0,0,0,10">
                        Cette démonstration montre les capacités de personnalisation de WPF :
                    </TextBlock>
                    <TextBlock Margin="0,5">
                        • <Bold>Styles</Bold> : Modifier l'apparence sans changer la structure
                    </TextBlock>
                    <TextBlock Margin="0,5">
                        • <Bold>Control Templates</Bold> : Redéfinir complètement la structure visuelle
                    </TextBlock>
                    <TextBlock Margin="0,5">
                        • <Bold>User Controls</Bold> : Créer des contrôles réutilisables et composites
                    </TextBlock>
                    <TextBlock Margin="0,5">
                        • <Bold>Personnalisation</Bold> : Transformer n'importe quel contrôle de base
                    </TextBlock>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>

</Window>
